<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/circleView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/texview_design"
        android:orientation="vertical"
        android:padding="35dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textview_title_2"
            android:gravity="center"
            android:text="@string/donut_view_title1"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/yellow"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_title_2"
            android:gravity="center"
            android:text="@string/donut_view_title2"
            android:textColor="@color/black" />
    </RelativeLayout>

</merge>
